<BorderPane prefHeight="720.0" prefWidth="1280.0" stylesheets="@estilo/estiloLogin.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.company.proyectopgv.controller.LoginController">
   <left>
      <VBox id="vBoxLeft" alignment="CENTER" prefHeight="720.0" prefWidth="420.0" style="-fx-background-color: #ffffff;" BorderPane.alignment="CENTER">
         <children>
            <ImageView fitHeight="381.0" fitWidth="540.0" pickOnBounds="true" preserveRatio="true" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </VBox.margin>
               <image>
                  <Image url="@image/Servereye.png" />
               </image>
            </ImageView>
         </children>
      </VBox>
   </left>
   <right>
      <VBox id="vBoxRigth" alignment="CENTER" prefHeight="720.0" prefWidth="870.0" BorderPane.alignment="CENTER">
         <children>
            <Label id="label" text="Usuario" />
            <TextField id="field" alignment="CENTER">
               <VBox.margin>
                  <Insets bottom="20.0" left="300.0" right="300.0" top="20.0" />
               </VBox.margin>
            </TextField>
            <Label id="label" text="Contraseña" />
            <HBox alignment="CENTER" prefHeight="45.0" prefWidth="870.0">
               <children>
                  <PasswordField id="field" fx:id="passwordField" alignment="CENTER" prefWidth="270.0" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="300.0" right="300.0" />
                     </HBox.margin>
                  </PasswordField>
               </children>
               <VBox.margin>
                  <Insets bottom="40.0" top="10.0" />
               </VBox.margin>
            </HBox>
            <Button id="button" mnemonicParsing="false" onAction="#goToPrimary" prefHeight="44.0" prefWidth="177.0" text="Iniciar sesión">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </right>
</BorderPane>
